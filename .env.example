# Backend Environment Variables
DATABASE_URL=postgres://user:pass@postgres:5432/app?sslmode=disable
PORT=8080
OPENAI_API_KEY=sk-your-api-key-here

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARN, ERROR (default: INFO)
# DEBUG - Verbose output including request previews and internal state
# INFO  - Standard operational logging
# WARN  - Warnings and potential issues
# ERROR - Errors and critical failures only
LOG_LEVEL=INFO

# Disable colored console output (optional)
# Set to any value to disable ANSI color codes in console output
# Useful for log aggregation systems or non-TTY environments
# NO_COLOR=1

# Frontend Environment Variables
VITE_API_URL=http://localhost:8080

# Database Environment Variables
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=app

# =============================================================================
# Security Scanner Configuration
# =============================================================================

# GitHub Personal Access Token (optional)
# Required for scanning private repositories
# Generate at: https://github.com/settings/tokens
# Required scopes: repo (for private repos)
# Leave empty or remove for public-only scanning
GITHUB_TOKEN=

# Scanner Configuration
# Maximum repository size in MB (default: 500)
SCANNER_MAX_REPO_SIZE_MB=500

# Maximum number of files to send to AI for code review (default: 10)
SCANNER_MAX_REVIEW_FILES=10

# Tool execution timeout in seconds (default: 300 = 5 minutes)
SCANNER_TOOL_TIMEOUT_SECONDS=300

# Scan result retention period in days (default: 7)
SCANNER_RESULT_RETENTION_DAYS=7
