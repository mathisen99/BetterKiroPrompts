{
  "name": "format",
  "description": "Format Go and frontend code",
  "version": "1.0.0",
  "enabled": true,
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "runCommand",
    "command": "[ -d backend ] && (cd backend && go fmt ./... 2>/dev/null); [ -d frontend ] && (cd frontend && pnpm format 2>/dev/null); true"
  }
}
